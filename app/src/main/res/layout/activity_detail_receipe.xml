<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="parimi.com.bakify.DetailReceipeActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/ingredients_cardview"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/standard_top_margin"
        android:layout_marginBottom="@dimen/standard_bottom_margin"
        android:layout_marginLeft="@dimen/standard_left_margin"
        android:layout_marginRight="@dimen/standard_right_margin"
        android:layout_height="100dp"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/bake_recipe_ingredients_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:textSize="@dimen/list_item_text_size"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>


